{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
}
  